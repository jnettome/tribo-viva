doctype 5
html
  head
    meta[charset="utf-8"]
    /[if lt IE 9]
      meta[content="text/html; charset=utf-8" http-equiv="Content-Type"]
      = javascript_include_tag "//html5shiv.googlecode.com/svn/trunk/html5.js"
    meta[name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"]
    css:
      html, body {
        background-color: #736856;
        font-family: sans-serif;
      }

      a {
        color: #fedc01;
      }

      .container {
        margin: 0 auto;
        width: 600px;
      }

      .logo {
        display: block;
        margin: 40px auto 25px;
      }

      .content {
        background-color: #fff;
        color: #463f32;
        padding: 25px 45px;
      }

      .header {
        background-color: #463f32;
        color: #e8decd;
        margin: 0;
        padding: 25px 45px;
      }

  body
    .container
      = link_to image_tag(attachments['logo.png'].url, class: 'logo'), root_url
      p.content.header = yield :header
      .content
        = yield
